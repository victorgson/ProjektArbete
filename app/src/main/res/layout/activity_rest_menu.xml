<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestMenu">

    <ImageView
        android:maxWidth="182dp"
        android:maxHeight="501dp"
        android:id="@+id/restBild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"


        />

    <TextView
        android:id="@+id/restInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restBild"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    <ListView
        android:id="@+id/menulista"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/restInfo"
        android:layout_marginTop="20dp">


    </ListView>

    <TextView
        android:id="@+id/randText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menulista"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Random" />

</RelativeLayout>